<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>

    <% if(!user) {%>
    <form id="loginForm" class="form-inline" action="/login" method="POST">
      <div class="form-group mb-2">
        <input
          class="form-control"
          type="text"
          name="username"
          placeholder="Username"
          style="width: 300px; margin: 0.5em"
        />
        <button type="submit" class="btn btn-outline-dark">Login</button>
      </div>
    </form>
    <% } else { %>
    <div id="loggedUsernameSection" class="form-group mb-2">
      <label>Logged in as : </label>
      <label style="margin: 0.5em"> <%= user["email"] %></label>
    </div>
    <form id="logoutForm" class="form-inline" action="/logout" method="POST">
      <div class="form-group mb-2">        
        <button type="submit" class="btn btn-dark">Logout</button>
      </div>
    </form>
    <% } %>
  </nav>
</header>
